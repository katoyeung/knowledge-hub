# Database Configuration
DB_HOST=host.docker.internal
DB_PORT=5432
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=knowledge_hub

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=2592000

# Redis & Cache Configuration
REDIS_HOST=host.docker.internal
REDIS_PORT=6379
CACHE_TTL=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS

# Server Configuration
PORT=3001
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=100

# AI/ML Service APIs (Optional - Add your API keys as needed)
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# OpenRouter
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Perplexity
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# DashScope (Alibaba Cloud)
DASHSCOPE_API_KEY=your-dashscope-api-key-here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
DASHSCOPE_TIMEOUT=30000
DASHSCOPE_CACHE_TTL=0

# Local Models
LOCAL_MODEL_BASE_URL=http://localhost:8000
LOCAL_MODEL_API_KEY=your-local-model-api-key-here
LOCAL_MODEL_CACHE_TTL=0
LOCAL_MODEL_TIMEOUT=30000
LOCAL_LLM_CACHE_TTL=0

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_API_KEY=
OLLAMA_CACHE_TTL=0
OLLAMA_TIMEOUT=120000
OLLAMA_TIMEOUT_0_6B=30000
OLLAMA_TIMEOUT_1B=60000
OLLAMA_TIMEOUT_3B=90000
OLLAMA_TIMEOUT_4B=120000
OLLAMA_TIMEOUT_7B=180000
OLLAMA_TIMEOUT_13B=300000

# Cache TTL for various services
OPENROUTER_CACHE_TTL=0
PERPLEXITY_CACHE_TTL=0
